{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "app/*": ["./src/app/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "@/*": ["./src/*"]
    },
    "target": "ES6",
    "lib": ["DOM", "ES2016"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}